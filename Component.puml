@startuml Component
!define C4Component
!include https://raw.githubusercontent.com/plantuml-stdlib/C4-PlantUML/master/C4_Component.puml

Person(user, "User", "A professional using LinkedIn Clone")

System_Boundary(linkedin_clone, "LinkedIn Clone Application Service") {
    Component(profile_service, "Profile Service", "Node.js", "Manages user profiles and connections")
    Component(feed_service, "Feed Service", "Node.js", "Manages the user's feed and posts")
    Component(messaging_service, "Messaging Service", "Node.js", "Handles messaging between users")
    Component(notification_service, "Notification Service", "Node.js", "Manages in-app and email notifications")
    Component(search_service, "Search Service", "Node.js", "Handles user and job search functionality")
    Component(payment_service, "Payment Integration Service", "Stripe SDK", "Processes subscriptions and payments")
    Component(auth_service, "Authentication Service", "OAuth 2.0", "Handles user authentication and authorization")
    Component(job_integration, "Job Integration Module", "API Integration", "Fetches and manages external job listings")
    Component(database, "Database", "PostgreSQL", "Stores all application data (users, posts, messages, jobs)")
}

Rel(user, profile_service, "Manages profile data", "HTTPS")
Rel(profile_service, database, "Reads/Writes user profiles")
Rel(user, feed_service, "Views feed and posts", "HTTPS")
Rel(feed_service, database, "Reads/Writes posts and interactions")
Rel(user, messaging_service, "Sends and receives messages", "HTTPS")
Rel(messaging_service, database, "Reads/Writes messages")
Rel(messaging_service, notification_service, "Triggers notifications", "Async")
Rel(user, notification_service, "Receives notifications", "HTTPS/Email")
Rel(user, search_service, "Searches users and jobs", "HTTPS")
Rel(search_service, database, "Queries user/job data")
Rel(user, payment_service, "Handles subscriptions", "HTTPS")
Rel(payment_service, auth_service, "Secures transactions", "OAuth")
Rel(user, auth_service, "Manages login/signup", "OAuth")
Rel(feed_service, notification_service, "Triggers notifications for new posts", "Async")
Rel(job_integration, database, "Updates job postings", "REST/Async")

SHOW_LEGEND()
@enduml
